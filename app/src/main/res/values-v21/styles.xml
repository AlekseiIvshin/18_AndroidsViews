<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/primary_dark</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/accent</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:background">@drawable/ab_solid</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="background">@drawable/ab_solid</item>

    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/view_rect</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/view_rect</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="AppTheme.Button" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>


    <style name="AppTheme.Spinner" parent="android:Widget.Material.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
